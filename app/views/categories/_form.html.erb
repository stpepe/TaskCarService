<%= form_with model: @category do |category|%>
    <div class="mb-3 row mt-3">
        <%= category.label :name, 'Название', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= category.text_field :name, class: 'form-control' %>
        </div>
    </div>
    <%= category.submit "Отправить", class: 'btn btn-primary'%>
<% end %>